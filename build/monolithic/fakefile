# fss-0005 iki-0002

settings:
  fail exit
  modes monolithic clang test

  environment PATH LD_LIBRARY_PATH

main:
  if parameter mode
    operate using_mode
  else
    operate using_default

using_default:
  build settings

using_mode:
  build settings parameter:'mode:value'

install:
  shell ./install.sh parameter:'work'
