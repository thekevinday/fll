# fss-000d
#
# Rule for initializing the /dev filesystem.
#

setting:
  name "Setup /dev filesystem"

  on start need boot root

# Newer kernels automount a devpts filesystem on /dev, so this may not be needed.
#command:
#  start mount /dev

script:
  start {
    if [[ ! -d /dev/pts ]] ; then
      mkdir /dev/pts
    fi

    if [[ ! -d /dev/shm ]] ; then
      mkdir /dev/shm
    fi

    exit 0
  }

command:
  start mount /dev/pts
  stop umount -l /dev/pts

command:
  start mount /dev/shm
  stop umount -l /dev/shm
