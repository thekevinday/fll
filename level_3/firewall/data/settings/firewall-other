# fss-0002

stop:
  action policy

  direction input
  rule ACCEPT

  direction output
  rule ACCEPT

  direction forward
  rule ACCEPT

  direction none
  action none
  rule --flush

  tool iptables
  rule -t nat --flush
  rule -t mangle --flush
  tool ip46tables

  rule --delete-chain

  tool iptables
  rule -t nat --delete-chain
  rule -t mangle --delete-chain
  tool ip46tables

lock:
  action policy

  direction input
  rule DROP

  direction output
  rule DROP

  direction forward
  rule DROP

  direction none
  action none
  rule --flush

  tool iptables
  rule -t nat --flush
  rule -t mangle --flush
  tool ip46tables

  rule --delete-chain

  tool iptables
  rule -t nat --delete-chain
  rule -t mangle --delete-chain
  tool ip46tables

  action insert
  direction input
  device lo
  rule -j ACCEPT
